<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/MpWifi_main_layout"
    android:background="@color/darker_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:visibility="gone">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/profile_pic_1"
            android:layout_marginRight="10dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/profile_pic_2"
            android:layout_marginLeft="10dp"/>

    </LinearLayout>

    <!-- Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/buttons"
        android:weightSum="5"
        android:background="@color/darker_bg"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:weightSum="10">

            <LinearLayout
                android:id="@+id/correct_wrong"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/wrongTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Wrong"
                    android:textStyle="bold"
                    android:textColor="@color/lie"
                    android:layout_marginRight="50dp"/>

                <TextView
                    android:id="@+id/correctTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Correct"
                    android:textStyle="bold"
                    android:textColor="@color/truth"
                    android:layout_marginLeft="50dp"/>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="8">

                <ProgressBar
                    android:id="@+id/progressbarScore"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:progress="120000"
                    android:max="120000"
                    android:progressDrawable="@drawable/multi_progressbar_bckg"
                    android:layout_marginBottom="0dp" />

                <ProgressBar
                    android:id="@+id/fakeProgressJustBecauseIcan"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:max="1000000"
                    android:progressDrawable="@drawable/multi_progressbar"
                    android:layout_marginBottom="0dp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="75%"
                    android:id="@+id/winRatioTv"
                    android:layout_centerInParent="true"
                    android:textSize="35sp"
                    android:textColor="@color/white"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/levelTextView"
                    android:text="Level 12"
                    android:textColor="@color/white"/>

                <ProgressBar
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="100"
                    android:progress="50"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:id="@+id/levelProgress"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearButtons"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="vertical"
            android:weightSum="3"
            android:background="@color/lighter_bg">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:padding="8dp"
                android:gravity="center_vertical"
                android:clickable="true"
                android:onClick="onStartMatchClicked"
                android:id="@+id/startBtn">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/play"
                    android:layout_marginRight="16dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/play"
                        android:textColor="@color/white"
                        android:textSize="20sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/play_msg"
                        android:textColor="@color/white"
                        android:layout_marginTop="2dp"
                        android:textSize="12sp"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:padding="8dp"
                android:gravity="center_vertical"
                android:clickable="true"
                android:onClick="onCheckGamesClicked">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/check_games"
                    android:layout_marginRight="16dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/check_games"
                        android:textColor="@color/white"
                        android:textSize="20sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/check_games_msg"
                        android:textColor="@color/white"
                        android:layout_marginTop="2dp"
                        android:textSize="12sp"/>

                </LinearLayout>

            </LinearLayout>

            <com.google.android.gms.common.SignInButton
                android:id="@+id/sign_in_button"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:padding="8dp"
                android:visibility="visible"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:padding="8dp"
                android:gravity="center_vertical"
                android:id="@+id/sign_out_button"
                android:visibility="gone">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/signed_in"
                    android:layout_marginRight="16dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sign_out"
                        android:textColor="@color/white"
                        android:textSize="20sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sign_out_msg"
                        android:textColor="@color/white"
                        android:layout_marginTop="2dp"
                        android:textSize="12sp"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
    <!-- Buttons -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:id="@+id/gameScreenBg"
        android:background="@android:color/transparent">

        <!-- Side Progress Bar 1 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:visibility="gone">

            <ProgressBar
                android:id="@+id/vertical_progressbar1"
                android:max="100"
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                style="@style/Widget.ProgressBar.Vertical"
                />

        </LinearLayout>
        <!-- Side Progress Bar 1 -->

        <!-- Main Content -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="13"
            android:orientation="vertical">

            <!-- Score -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="8dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/p_1_TV"
                    android:textColor="@color/greyText"
                    android:text="player 1"
                    android:layout_marginRight="12dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/scoreTV"
                    android:textColor="@color/greyText"
                    android:text=" 0 - 0 "/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/p_2_TV"
                    android:textColor="@color/greyText"
                    android:text="player 2"
                    android:layout_marginLeft="12dp"/>

            </LinearLayout>
            <!-- Score -->

            <!-- Set Texts Screen -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="vertical"
                android:weightSum="11"
                android:id="@+id/setTexts"
                android:layout_weight="14"
                android:visibility="gone">

                <EditText
                    android:id="@+id/firstS"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:padding="5dp"
                    android:gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="15dp"
                    android:layout_weight="3"
                    android:background="@drawable/custom_edittext_truth"
                    android:paddingTop="5dp"
                    android:textColor="#ffffff"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/secondS"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:padding="5dp"
                    android:gravity="center"
                    android:layout_weight="3"
                    android:background="@drawable/custom_edittext_truth"
                    android:paddingTop="5dp"
                    android:textColor="#ffffff"
                    android:textSize="20sp"/>

                <EditText
                    android:id="@+id/thirdS"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="15dp"
                    android:padding="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="3"
                    android:background="@drawable/custom_edittext_truth"
                    android:gravity="center"
                    android:paddingTop="5dp"
                    android:textColor="#ffffff"
                    android:textSize="20sp" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_weight="2"
                    android:paddingBottom="8dp">

                    <Button
                        android:id="@+id/proceed"
                        android:layout_width="220dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:background="@drawable/rounded_button"
                        android:text="PROCEED"
                        android:onClick="onDoneClicked"
                        android:textColor="#fff"
                        android:textSize="20sp" />
                </LinearLayout>

            </LinearLayout>
            <!-- Set Texts Screen -->

            <!-- Guess Screen -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/chooseTexts"
                android:orientation="vertical"
                android:layout_weight="14"
                android:weightSum="3"
                android:padding="10dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/custom_edittext_truth"
                    android:id="@+id/firstTW"
                    android:textColor="#ffffff"
                    android:textSize="20sp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="5dp"
                    android:gravity="center_horizontal"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:id="@+id/secondTW"
                    android:paddingLeft="10dp"
                    android:textColor="#ffffff"
                    android:textSize="20sp"
                    android:background="@drawable/custom_edittext_truth"
                    android:paddingRight="10dp"
                    android:paddingTop="5dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center_horizontal" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:id="@+id/thirdTW"
                    android:paddingLeft="10dp"
                    android:textColor="#ffffff"
                    android:textSize="20sp"
                    android:paddingRight="10dp"
                    android:paddingTop="5dp"
                    android:background="@drawable/custom_edittext_truth"
                    android:layout_marginTop="10dp"
                    android:gravity="center_horizontal" />

            </LinearLayout>
            <!-- Guess Screen -->

            <!-- Not your turn Screen -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="14"
                android:visibility="gone"
                android:orientation="vertical"
                android:background="@color/darker_bg"
                android:gravity="center"
                android:id="@+id/notYourTurn">

                <ProgressBar
                    android:id="@+id/loading2"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:progressDrawable="@drawable/multi_progressbar"
                    android:layout_centerHorizontal="true"
                    android:padding="1dp"
                    android:layout_marginBottom="8dp"
                    android:max="500"
                    android:progress="250" />


                <TextView
                    android:id="@+id/turnText"
                    android:layout_width="wrap_content"
                    android:layout_above="@+id/checkOtherGames"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:layout_height="wrap_content"
                    android:text="Not your turn fam!"/>

                <Button
                    android:id="@+id/checkOtherGames"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Check Other Games"
                    android:onClick="onCheckGamesClicked"
                    android:layout_marginTop="8dp"/>

            </RelativeLayout>
            <!-- Not your turn Screen -->


            <!-- Game finished Screen -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="14"
                android:visibility="gone"
                android:id="@+id/gameFinished"
                android:gravity="center">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/score_board_bg"
                    android:src="@drawable/scoreboard_new"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:paddingTop="30dp">

                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:src="@drawable/multi"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:text="SurlierBacchus"
                        android:textColor="@color/white"
                        android:textSize="20dp"
                        android:layout_marginTop="6dp"/>

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:orientation="horizontal"
                    android:layout_centerInParent="true">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_alignParentLeft="true"
                        android:paddingLeft="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="22"
                            android:textColor="@color/white"
                            android:textSize="50dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:text="points"
                            android:textColor="@color/white"
                            android:textSize="20dp"/>

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="VS"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textSize="18dp"
                        android:layout_centerInParent="true"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_horizontal"
                        android:paddingRight="12dp"
                        android:layout_alignParentRight="true">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="19"
                            android:textColor="@color/white"
                            android:textSize="50dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:text="points"
                            android:textColor="@color/white"
                            android:textSize="20dp"/>

                    </LinearLayout>

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_alignParentBottom="true"
                    android:gravity="center"
                    android:paddingBottom="50dp">

                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:src="@drawable/single"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:text="Raptorko"
                        android:textColor="@color/white"
                        android:textSize="20dp"
                        android:layout_marginTop="6dp"/>

                </LinearLayout>

            </RelativeLayout>
            <!-- Game finished Screen -->

        </LinearLayout>
        <!-- Main Content -->

        <!-- Side Progress Bar 2 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:visibility="gone">

            <ProgressBar
                android:id="@+id/vertical_progressbar2"
                android:max="100"
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                style="@style/Widget.ProgressBar.Vertical"
                />

        </LinearLayout>
        <!-- Side Progress Bar 1 -->

    </LinearLayout>

</LinearLayout>