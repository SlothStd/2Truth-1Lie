<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/MpWifi_main_layout"
    android:background="@color/darker_bg">

    <!-- Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/buttons"
        android:weightSum="5"
        android:background="@color/darker_bg"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:weightSum="10">

            <LinearLayout
                android:id="@+id/correct_wrong"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/wrongTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Wrong"
                    android:textStyle="bold"
                    android:textColor="@color/lie"
                    android:layout_marginRight="50dp"/>

                <TextView
                    android:id="@+id/correctTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Correct"
                    android:textStyle="bold"
                    android:textColor="@color/truth"
                    android:layout_marginLeft="50dp"/>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="8">

                <ProgressBar
                    android:id="@+id/progressbarScore"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:progress="120000"
                    android:max="120000"
                    android:progressDrawable="@drawable/scoreboard_progressbar_bckg"
                    android:layout_marginBottom="0dp" />

                <ProgressBar
                    android:id="@+id/fakeProgressJustBecauseIcan"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:progress="70000"
                    android:max="120000"
                    android:progressDrawable="@drawable/scoreboard_progressbar"
                    android:layout_marginBottom="0dp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="75%"
                    android:id="@+id/winRatioTv"
                    android:layout_centerInParent="true"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="vertical"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/levelTextView"
                    android:text="Level 12"
                    android:textColor="@color/white"/>

                <ProgressBar
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="100"
                    android:progress="50"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:id="@+id/levelProgress"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="vertical"
            android:weightSum="3"
            android:background="@color/lighter_bg">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:padding="8dp"
                android:gravity="center_vertical"
                android:clickable="true"
                android:onClick="onStartMatchClicked"
                android:id="@+id/startBtn">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:layout_marginRight="16dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Play"
                        android:textColor="@color/white"
                        android:textSize="20sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Choose an opponent to start the game with"
                        android:textColor="@color/white"
                        android:layout_marginTop="2dp"
                        android:textSize="12sp"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:padding="8dp"
                android:gravity="center_vertical"
                android:clickable="true"
                android:onClick="onCheckGamesClicked">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:layout_marginRight="16dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Check Games"
                        android:textColor="@color/white"
                        android:textSize="20sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Look at available ongoing games"
                        android:textColor="@color/white"
                        android:layout_marginTop="2dp"
                        android:textSize="12sp"/>

                </LinearLayout>

            </LinearLayout>

            <com.google.android.gms.common.SignInButton
                android:id="@+id/sign_in_button"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:padding="8dp"
                android:visibility="visible"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:padding="8dp"
                android:gravity="center_vertical"
                android:id="@+id/sign_out_button"
                android:visibility="gone">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:layout_marginRight="16dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sign in"
                        android:textColor="@color/white"
                        android:textSize="20sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sign in with your Google account"
                        android:textColor="@color/white"
                        android:layout_marginTop="2dp"
                        android:textSize="12sp"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
    <!-- Buttons -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="10"
        android:id="@+id/gameScreenBg"
        android:background="@android:color/transparent">

        <!-- Score -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/p_1_TV"
                android:text="player 1"
                android:layout_marginRight="12dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/scoreTV"
                android:text=" 0 - 0 "/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/p_2_TV"
                android:text="player 2"
                android:layout_marginLeft="12dp"/>

        </LinearLayout>
        <!-- Score -->

        <!-- Set Texts Screen -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:weightSum="11"
            android:id="@+id/setTexts"
            android:layout_weight="9"
            android:visibility="gone">

            <EditText
                android:id="@+id/firstS"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:padding="5dp"
                android:gravity="center"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="15dp"
                android:layout_weight="3"
                android:background="@drawable/custom_edittext_truth"
                android:paddingTop="5dp"
                android:textColor="#ffffff"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/secondS"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:padding="5dp"
                android:gravity="center"
                android:layout_weight="3"
                android:background="@drawable/custom_edittext_truth"
                android:paddingTop="5dp"
                android:textColor="#ffffff"
                android:textSize="20sp"/>

            <EditText
                android:id="@+id/thirdS"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="15dp"
                android:padding="5dp"
                android:layout_marginRight="15dp"
                android:layout_weight="3"
                android:background="@drawable/custom_edittext_truth"
                android:gravity="center"
                android:paddingTop="5dp"
                android:textColor="#ffffff"
                android:textSize="20sp" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_weight="2"
                android:paddingBottom="8dp">

                <Button
                    android:id="@+id/proceed"
                    android:layout_width="220dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:background="@drawable/rounded_button"
                    android:text="PROCEED"
                    android:onClick="onDoneClicked"
                    android:textColor="#fff"
                    android:textSize="20sp" />
            </LinearLayout>

        </LinearLayout>
        <!-- Set Texts Screen -->

        <!-- Guess Screen -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/chooseTexts"
            android:orientation="vertical"
            android:layout_weight="9"
            android:weightSum="3"
            android:padding="10dp"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/custom_edittext_truth"
                android:id="@+id/firstTW"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:gravity="center_horizontal"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:id="@+id/secondTW"
                android:paddingLeft="10dp"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:background="@drawable/custom_edittext_truth"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:id="@+id/thirdTW"
                android:paddingLeft="10dp"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:background="@drawable/custom_edittext_truth"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal" />

        </LinearLayout>
        <!-- Guess Screen -->

        <!-- Not your turn Screen -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="9"
            android:visibility="gone"
            android:orientation="vertical"
            android:background="@color/darker_bg"
            android:gravity="center"
            android:id="@+id/notYourTurn">


            <ProgressBar
                android:id="@+id/loading1"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="47dp"
                android:layout_height="47dp"
                android:padding="1dp"
                android:progressDrawable="@drawable/green_progressbar"
                android:layout_above="@+id/turnText"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp"
                android:max="500"
                android:progress="250" />

            <ProgressBar
                android:id="@+id/loading2"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:progressDrawable="@drawable/red_progressbar"
                android:layout_alignBottom="@+id/loading1"
                android:layout_centerHorizontal="true"
                android:padding="1dp"
                android:layout_marginBottom="8dp"
                android:max="500"
                android:progress="250" />


            <TextView
                android:id="@+id/turnText"
                android:layout_width="wrap_content"
                android:layout_above="@+id/checkOtherGames"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content"
                android:text="Not your turn fam!"/>

            <Button
                android:id="@+id/checkOtherGames"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Check Other Games"
                android:onClick="onCheckGamesClicked"
                android:layout_marginTop="8dp"/>

        </RelativeLayout>
        <!-- Not your turn Screen -->

        <!-- Game finished Screen -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="9"
            android:visibility="gone"
            android:orientation="vertical"
            android:gravity="center"
            android:id="@+id/gameFinished"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="8dp">

                <com.jjoe64.graphview.GraphView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/graphMP"/>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/player1TV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Player 1"
                    android:textColor="#ffffff"
                    android:textSize="20sp"
                    android:layout_above="@+id/leftProgress"
                    android:layout_alignLeft="@+id/leftProgress"
                    android:textAlignment="center"
                    android:layout_alignRight="@+id/leftProgress" />

                <TextView
                    android:id="@+id/leftProgressPercentage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100%"
                    android:textColor="#ffffff"
                    android:textSize="20sp"
                    android:layout_alignLeft="@+id/leftProgress"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:layout_alignRight="@+id/leftProgress"
                    android:layout_alignTop="@+id/leftProgress"
                    android:layout_alignBottom="@+id/leftProgress" />

                <ProgressBar
                    android:id="@+id/leftProgressBckg"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:progressDrawable="@drawable/scoreboard_progressbar_bckg"
                    android:layout_centerHorizontal="true"
                    android:layout_toLeftOf="@+id/buttomMiddle"
                    android:layout_centerVertical="true"
                    android:padding="1dp"
                    android:layout_marginBottom="8dp"
                    android:max="100"
                    android:progress="100" />

                <ProgressBar
                    android:id="@+id/leftProgress"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:progressDrawable="@drawable/scoreboard_progressbar"
                    android:layout_centerHorizontal="true"
                    android:layout_toLeftOf="@+id/buttomMiddle"
                    android:layout_centerVertical="true"
                    android:padding="1dp"
                    android:layout_marginBottom="8dp"
                    android:progress="0" />


                <TextView
                    android:id="@+id/buttomMiddle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:id="@+id/player2TV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Player 2"
                    android:textColor="#ffffff"
                    android:textSize="20sp"
                    android:layout_above="@+id/rightProgress"
                    android:layout_alignLeft="@+id/rightProgress"
                    android:textAlignment="center"
                    android:layout_alignRight="@+id/rightProgress" />

                <ProgressBar
                    android:id="@+id/rightProgressBckg"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_toRightOf="@+id/buttomMiddle"
                    android:progressDrawable="@drawable/scoreboard_progressbar_bckg"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:padding="1dp"
                    android:layout_marginBottom="8dp"
                    android:max="100"
                    android:progress="100" />

                <TextView
                    android:id="@+id/rightProgressPercentage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100%"
                    android:textColor="#ffffff"
                    android:textSize="20sp"
                    android:layout_alignLeft="@+id/rightProgress"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:layout_alignRight="@+id/rightProgress"
                    android:layout_alignTop="@+id/rightProgress"
                    android:layout_alignBottom="@+id/rightProgress" />


                <ProgressBar
                    android:id="@+id/rightProgress"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_toRightOf="@+id/buttomMiddle"
                    android:progressDrawable="@drawable/scoreboard_progressbar"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:padding="1dp"
                    android:layout_marginBottom="8dp"
                    android:progress="0" />

            </RelativeLayout>

        </LinearLayout>
        <!-- Game finished Screen -->

    </LinearLayout>

</LinearLayout>