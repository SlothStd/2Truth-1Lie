<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/purple_ish">

    <ImageView
        android:layout_width="340dp"
        android:layout_height="200dp"
        android:id="@+id/imageView"
        android:background="@drawable/title"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp" />

    <Button
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:id="@+id/WiFi"
        android:textColor="#fff"
        android:text="Wifi"
        android:textSize="28sp"
        android:background="@drawable/circle_button"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:visibility="gone"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:id="@+id/BT"
        android:textColor="#fff"
        android:text="Bluetooth"
        android:textSize="28sp"
        android:background="@drawable/circle_button"
        android:layout_below="@+id/WiFi"
        android:layout_centerHorizontal="true"
        android:visibility="gone"/>

    <Button
        android:layout_width="41dp"
        android:layout_height="41dp"
        android:id="@+id/Settings"
        android:visibility="visible"
        android:textColor="#fff"
        android:textSize="28sp"
        android:background="@drawable/circle_button"
        android:layout_alignStart="@+id/progressBarSett"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="0dp" />

    <ProgressBar
        android:id="@+id/progressBarSett"
        android:background="@drawable/settings"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="41dp"
        android:layout_height="41dp"
        android:max="500"
        android:progress="0"
        android:progressDrawable="@drawable/circular"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:visibility="visible" />

    <Button
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:id="@+id/Twophones"
        android:visibility="gone"
        android:textColor="#fff"
        android:textSize="28sp"
        android:background="@drawable/circle_button"
        android:layout_marginTop="95dp"
        android:layout_below="@+id/imageView"
        android:layout_alignStart="@+id/progressBarMulti"
        android:layout_alignLeft="@+id/progressBarSett"
        android:layout_marginLeft="5dp"
        android:layout_alignRight="@+id/progressBarMulti"
        android:layout_marginRight="5dp" />

    <Button
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:id="@+id/Onephone"
        android:textColor="#fff"
        android:visibility="gone"
        android:textSize="28sp"
        android:background="@drawable/circle_button"
        android:layout_alignTop="@+id/Twophones"
        android:layout_alignRight="@+id/progressBar"
        android:layout_alignEnd="@+id/progressBar"
        android:layout_marginRight="4dp"
        android:layout_marginEnd="4.8dp" />

    <ProgressBar
        android:id="@+id/progressBarMulti"
        android:background="@drawable/multi"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:max="500"
        android:progress="0"
        android:progressDrawable="@drawable/circular"
        android:layout_marginRight="40dp"
        android:layout_marginEnd="40dp"
        android:layout_alignTop="@+id/progressBar"
        android:layout_toLeftOf="@+id/progressBarSett"
        android:layout_toStartOf="@+id/progressBarSett"
        android:layout_alignRight="@+id/imageView"
        android:visibility="gone" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:background="@drawable/play"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:max="500"
        android:progress="0"
        android:progressDrawable="@drawable/circular"
        android:layout_marginTop="90dp"
        android:layout_below="@+id/imageView"
        android:layout_marginRight="15dp"
        android:layout_toLeftOf="@+id/progressBarMulti"
        android:layout_marginLeft="0dp"
        android:visibility="gone" />


</RelativeLayout>