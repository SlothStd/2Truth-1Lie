<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/next_player"
    android:weightSum="1">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="90dp"
        android:layout_alignParentStart="true"
        android:background="@drawable/round_button"
        android:id="@+id/firstTW"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:layout_above="@+id/secondTW"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="40dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:gravity="center_horizontal" />


    <TextView
        android:layout_width="fill_parent"
        android:layout_height="90dp"
        android:layout_alignParentStart="true"
        android:id="@+id/secondTW"
        android:paddingLeft="10dp"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:background="@drawable/round_button"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:layout_above="@+id/thirdTW"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="40dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:gravity="center_horizontal" />


    <TextView
        android:layout_width="fill_parent"
        android:layout_height="90dp"
        android:id="@+id/thirdTW"
        android:layout_marginBottom="119dp"
        android:paddingLeft="10dp"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:background="@drawable/round_button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:gravity="center_horizontal" />

    <Button
        android:layout_width="220dp"
        android:layout_height="60dp"
        android:text="Switch Players"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:visibility="gone"
        android:background="@drawable/round_button"
        android:id="@+id/switch_player"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="37dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cross"
        android:background="@drawable/cross"
        android:visibility="gone"
        android:layout_below="@+id/firstTW"
        android:layout_centerHorizontal="true" />


</RelativeLayout>