<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/darker_bg"
    android:weightSum="3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="1"
        android:weightSum="2"
        android:background="@color/materialPurple">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingTop="30dp"
            android:src="@drawable/avatar"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/switch_player"
                android:layout_width="155dp"
                android:layout_height="50dp"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/custom_button_game"
                android:visibility="gone"
                android:text="switch players"/>

        <TextView
            android:id="@+id/IsGuessingTW"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal|center_vertical"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:text="Is guessing..." />

            <ProgressBar
                android:id="@+id/progress1"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="37dp"
                android:layout_height="37dp"
                android:layout_marginTop="10dp"
                android:padding="1dp"
                android:layout_below="@id/IsGuessingTW"
                android:progressDrawable="@drawable/green_progressbar"
                android:layout_centerHorizontal="true"
                android:max="500"
                android:progress="250" />

            <ProgressBar
                android:id="@+id/progress2"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:progressDrawable="@drawable/red_progressbar"
                android:layout_alignBottom="@+id/progress1"
                android:layout_centerHorizontal="true"
                android:padding="1dp"
                android:layout_marginBottom="8dp"
                android:max="500"
                android:progress="250" />

        </RelativeLayout>

        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight="2"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:weightSum="3">


            <TextView
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_alignParentStart="true"
                android:background="@color/white"
                android:id="@+id/firstTW"
                android:padding="7dp"
                android:gravity="center_horizontal|center_vertical"
                android:layout_weight="1"
                android:textColor="#000"
                android:textSize="25sp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_above="@+id/secondTW"
                android:layout_alignParentLeft="true" />


            <TextView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_alignParentStart="true"
        android:layout_weight="1"
        android:id="@+id/secondTW"
        android:paddingLeft="10dp"
        android:textColor="#000"
        android:textSize="25sp"
        android:background="@color/white"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:layout_above="@+id/thirdTW"
        android:layout_alignParentLeft="true"
        android:padding="7dp"
        android:gravity="center_horizontal|center_vertical"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="20dp" />


    <TextView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:id="@+id/thirdTW"
        android:paddingLeft="10dp"
        android:textColor="#000"
        android:textSize="25sp"
        android:paddingRight="10dp"
        android:padding="7dp"
        android:gravity="center_horizontal|center_vertical"
        android:layout_weight="1"
        android:paddingTop="5dp"
        android:background="@color/white"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />

        </LinearLayout>

</LinearLayout>