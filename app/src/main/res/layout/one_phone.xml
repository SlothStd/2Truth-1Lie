<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/purple_ish">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <EditText
        android:layout_width="220dp"
        android:layout_height="130dp"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:gravity="center_horizontal|top"
        android:background="@color/truth"
        android:layout_marginTop="50dp"
        android:id="@+id/firstS"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:autoText="false"
        android:paddingTop="5dp" />

        <EditText
            android:layout_width="220dp"
            android:layout_height="130dp"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:gravity="center_horizontal|top"
            android:background="@color/truth"
            android:id="@+id/secondS"
            android:layout_below="@+id/firstS"
            android:layout_alignLeft="@+id/firstS"
            android:layout_alignStart="@+id/firstS"
            android:layout_marginTop="20dp"
            android:paddingTop="5dp" />

        <EditText
            android:layout_width="220dp"
            android:layout_height="130dp"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:gravity="center_horizontal|top"
            android:background="@color/truth"
            android:id="@+id/thirdS"
            android:layout_below="@+id/secondS"
            android:layout_alignLeft="@+id/secondS"
            android:layout_alignStart="@+id/secondS"
            android:layout_marginTop="20dp"
            android:paddingTop="5dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_x="262dp"
            android:layout_y="0dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/truth"
                android:text="TRUTH"
                android:textSize="18sp"
                android:id="@+id/textView2"
                android:layout_alignTop="@+id/textView"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/lie"
                android:textSize="18sp"
                android:text="LIE"
                android:id="@+id/textView"
                android:layout_marginTop="17dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="25dp" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_x="0dp"
                android:layout_y="480dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">

                <Button
                    android:layout_width="220dp"
                    android:layout_height="60dp"
                    android:background="@drawable/round_button"
                    android:text="PROCEED"
                    android:textColor="#fff"
                    android:textSize="20sp"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="40dp"
                    android:id="@+id/proceed" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/truth"
                    android:id="@+id/thirdTruth"
                    android:layout_marginRight="22dp"
                    android:layout_marginEnd="22dp"
                    android:layout_alignTop="@+id/thirdLie"
                    android:layout_toLeftOf="@+id/proceed"
                    android:layout_toStartOf="@+id/proceed" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/truth"
                    android:id="@+id/secondTruth"
                    android:layout_below="@+id/firstTruth"
                    android:layout_alignLeft="@+id/thirdTruth"
                    android:layout_alignStart="@+id/thirdTruth"
                    android:layout_marginTop="119dp" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/truth"
                    android:id="@+id/firstTruth"
                    android:layout_marginTop="103dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignLeft="@+id/secondTruth"
                    android:layout_alignStart="@+id/secondTruth" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/lie"
                    android:id="@+id/thirdLie"
                    android:layout_below="@+id/secondTruth"
                    android:layout_alignLeft="@+id/firstLie"
                    android:layout_alignStart="@+id/firstLie"
                    android:layout_marginTop="115dp" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/lie"
                    android:id="@+id/firstLie"
                    android:layout_alignTop="@+id/firstTruth"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="22dp"
                    android:layout_marginEnd="22dp" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/lie"
                    android:id="@+id/secondLie"
                    android:layout_above="@+id/thirdLie"
                    android:layout_alignLeft="@+id/firstLie"
                    android:layout_alignStart="@+id/firstLie" />

            </RelativeLayout>


        </RelativeLayout>

    </RelativeLayout>


</AbsoluteLayout>